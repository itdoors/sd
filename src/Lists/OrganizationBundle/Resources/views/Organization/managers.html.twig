{% trans_default_domain 'ListsOrganizationBundle' %}

    <div class="col-md-12">
        <h3>{% trans %}Managers{% endtrans %}</h3>
        <p>{% trans %}Managers on organization{% endtrans %}</p>
        {% if isAddManager %}
        <div class="table-toolbar">
            <div class="btn-group">
                <button id="managers_list_new" class="btn green ajax-form"
                        data-target_holder="managerFormTpl"
                        data-form_name="organizationUserSalesAdminForm"
                        data-default='{"organizationId":{{ organization.id }}}'
                        data-post_function="updateList"
                        data-post_target_id="managers_list"
                >
                    {% trans %}Add New{% endtrans %} <i class="fa fa-plus"></i>
                </button>
            </div>
            <div style="display: none" id="managerFormTpl"></div>
        </div>
        {% endif %}
        <div id="managers_list"
             data-url="{{ path('lists_organization_ajax_users', {
                organizationId: organization.id
             }) }}"
             data-params='{"organizationId":{{ organization.id }}'
        >
            {{ render(controller('ListsOrganizationBundle:Organization:OrganizationUsers', {
                organizationId: organization.id
            })) }}
        </div>
    </div>
