{% trans_default_domain 'ListsOrganizationBundle' %}
<table class="table table-striped table-hover table-bordered">
    <thead>
    <tr>
        <th>{% trans %}LastName, FirstName{% endtrans %}</th>
        <th>{% trans %}Mobile{% endtrans %}</th>
        <th>{% trans %}Email{% endtrans %}</th>
        <th>{% trans %}Role{% endtrans %}</th>
         {% if managerOrganization %}
        <th>{% trans %}Action{% endtrans %}</th> {# Поле для действий #}
        {% endif %}
    </tr>
    </thead>
    <tbody>
    {% for item in organizationUsers %}
        <tr>
            <td>{{ item.firstName }} {{ item.lastName }}</td>
            <td>{{ item.mobilephone }}</td>
            <td>{{ item.email }}</td>
            <td>{{ item.name }}</td>
              {% if managerOrganization %}
            <td>
                {% if item.lukey != 'manager_organization' and item.userId != app.user.id  %}
                <a
                    class="ajax-delete"
                    href="javascript:;"
                    data-params='{"model":"OrganizationUser","organizationUserId":{{ item.id }}}'
                >
                    {% trans %}Delete{% endtrans %}
                </a>
                {% endif %}
            </td>
             {% endif %}
        </tr>
    {% endfor %}
    </tbody>
</table>
