{% trans_default_domain 'ListsOrganizationBundle' %}
<table class="table table-striped table-hover table-bordered">
    <thead>
    <tr>
        <th>{% trans %}LastName, FirstName{% endtrans %}</th>
        <th>{% trans %}Mobile{% endtrans %}</th>
        <th>{% trans %}Email{% endtrans %}</th>
        <th>{% trans %}Role{% endtrans %}</th>
    </tr>
    </thead>
    <tbody>
    {% for item in organizationUsers %}
        <tr>
            <td>{{ item.fullName }}</td>
            <td>
                {% if item.stuff %}
                    {{ item.stuff.mobilephone }}
                {% endif %}
            </td>
            <td>{{ item.email }}</td>
            <td>
                <a
                    class="ajax-delete"
                    href="javascript:;"
                    data-params='{"model":"OrganizationUser","organizationId":{{ organizationId }},"userId":{{ item.id }}}'
                >
                    {% trans %}Delete{% endtrans %}
                </a>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>