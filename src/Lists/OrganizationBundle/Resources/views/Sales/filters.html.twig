					</div>
					<div class="form-group">	
						{{ form_label(filterForm.scope, 'Scope', {'attr': {'class': 'sr-only'}}) }}
						{{ form_widget(filterForm.scope, {'attr': {'class': 'form-control select2 input-middle', 'placeholder': 'Enter Scope', 'multiple': 'multiple'}}) }}																										
