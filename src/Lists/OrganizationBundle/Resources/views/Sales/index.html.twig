{% extends "::base.html.twig" %}
{% trans_default_domain 'ListsOrganizationBundle' %}
{% block title %}{% trans %}List of Organizations{% endtrans %} {% endblock %}
{% block page_breadcrumbs %}
	<ul class="page-breadcrumb breadcrumb">
		<li>
			<i class="fa fa-home"></i>
			<a href="{{ path('sd_dashboard_homepage') }}" title="{% trans %}Dashboard{% endtrans %}">{% trans %}Dashboard{% endtrans %}</a>
			<i class="fa fa-angle-right"></i>
		</li>
		<li><a href="{{ path('lists_' ~ baseRoutePrefix ~ '_organization_index') }}" title="{% trans %}My Organizations{% endtrans %}">{% trans %}My Organizations{% endtrans %}</a></li>
	</ul>
{% endblock %}
{% block page_title %}
	<h3 class="page-title">
		{% trans %}Organization <small>list of organization</small>{% endtrans %}
	</h3>
{% endblock %}


{% block css_page_level_plugin %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('templates/metronic/plugins/select2/select2_metro.css')}} " />
{% endblock %}

{% block js_page_level_plugins %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('templates/metronic/plugins/select2/select2.min.js') }}"></script>
{% endblock %}

{% block body %}

    {{  include(
            'ListsOrganizationBundle:' ~ baseTemplate ~ ':filters.html.twig',
            {
                filterForm: filterForm,
                filterFormName: filterFormName
            }
        )
    }}
	<div class="table-toolbar">
		<div class="btn-group">
			<a class="btn green" id="add_organization" href="{{ path('lists_' ~ baseRoutePrefix ~ '_organization_new') }}">
				{% trans %}Add New{% endtrans %} <i class="fa fa-plus"></i>
			</a>
		</div>
		{#
		<div class="btn-group pull-right">
			<button data-toggle="dropdown" class="btn dropdown-toggle">{% trans %}Tools{% endtrans %} <i class="fa fa-angle-down"></i>
			</button>
			<ul class="dropdown-menu pull-right">
				<li><a href="#">{% trans %}Print{% endtrans %}</a></li>
				<li><a href="#">{% trans %}Save as PDF{% endtrans %}</a></li>
				<li><a href="#">{% trans %}Export to Excel{% endtrans %}</a></li>
			</ul>
		</div>
		#}
	</div>
    <div class="table-responsive">
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped table-bordered table-advance table-hover">
            <thead>
            <tr>
                <th>{% trans %}ID{% endtrans %} </th>
                <th>{% trans %}Name{% endtrans %} </th>
                <th>{% trans %}City{% endtrans %} </th>
                <th>{% trans %}Region{% endtrans %} </th>
                <th>{% trans %}Scope{% endtrans %} </th>
                <th>{% trans %}Managers{% endtrans %} </th>
                <th>{% trans %}Actions{% endtrans %} </th>
            </tr>
            </thead>
            <tbody>
            {% for item in pagination %}
                <tr {% if loop.index is odd %}class="color"{% endif %}>
                    <td>
                        <a
                            href="{{ path('lists_' ~ baseRoutePrefix ~ '_organization_show', { id: item.organizationId }) }}">
                            {{ item.organizationId|e }}
                        </a>
                    </td>
                    <td>{{ item.organizationName|e }}</td>
                    <td>{{ item.cityName|e }}</td>
                    <td>{{ item.regionName|e }}</td>
                    <td>{{ item.scopeName|e }}</td>
                    <td>{{ item.fullNames|e }}</td>
                    <td>
                        <a
                            class="btn default btn-xs red-stripe"
                            href="{{ path('lists_' ~ baseRoutePrefix ~ '_handling_add_organization_filter', {'organization_id': item.organizationId}) }}">
                            {% trans %}Handling list link{% endtrans %}
                        </a>

                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock body %}
