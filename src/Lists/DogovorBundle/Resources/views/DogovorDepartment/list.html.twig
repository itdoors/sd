{% trans_default_domain 'ListsDogovorBundle' %}
<table class="table table-striped table-bordered table-advance table-hover">
    <thead>
    <tr>
        <th>{% trans %}ID{% endtrans %} </th>
        <th>{% trans from 'messages' %}Createdatetime{% endtrans %} </th>
        <th>{% trans %}Dogovor{% endtrans %} </th>
        <th>{% trans %}Dop Dogovor{% endtrans %} </th>
        <th>{% trans %}MPK{% endtrans %} </th>
        <th>{% trans %}Department{% endtrans %} </th>
        <th>{% trans from 'messages' %}Creator{% endtrans %} </th>
        <th>{% trans %}Comments{% endtrans %} </th>
        {% if access.canEdit %}
        <th>{% trans from 'messages' %}Actions{% endtrans %} </th>
        {% endif %}
    </tr>
    </thead>
    <tbody>
    {% for item in items %}
        <tr>
            <td>{{ item.id }}</td>
            <td>{{ item.createdatetime is empty ? '' : item.createdatetime|date('H:i d.m.Y') }}</td>
            <td>{{ item.dogovorNumber|e }}</td>
            <td>#{{ item.dopDogovorString }}</td>
            <td>{{ item.mpk }}</td>
            <td>{{ item.department }}</td>
            <td>{{ item.creatorFullName }}</td>
            <td>{{ item.comment }}</td>
            {% if access.canEdit %}
            <td>
                <a
                        class="ajax-delete btn red"
                        href="javascript:;"
                        data-params='{"model":"DogovorDepartment","id":{{ item.id }}}'
                        >
                    {% trans from 'messages' %}Delete{% endtrans %}
                </a>
            </td>
            {% endif %}
        </tr>
    {% endfor %}
    </tbody>
</table>
