{% extends "::base.html.twig" %}
{% trans_default_domain 'ListsDogovorBundle' %}
{% block title %}{% trans %}Dogovor list{% endtrans %} {% endblock %}
{% block page_breadcrumbs %}
    <ul class="page-breadcrumb breadcrumb">
        <li>
            <i class="fa fa-home"></i>
            <a href="{{ path('sd_dashboard_homepage') }}" title="{% trans %}Dashboard{% endtrans %}">{% trans %}Dashboard{% endtrans %}</a>
            <i class="fa fa-angle-right"></i>
        </li>
        <li><a href="{{ path('lists_' ~ baseRoutePrefix ~ '_dogovor_index') }}" title="{% trans %}Dogovor list{% endtrans %}">{% trans %}Dogovor list{% endtrans %}</a></li>
    </ul>
{% endblock %}
{% block page_title %}
    <h3 class="page-title">
        {% trans %}Dogovor list <small>dogovor list</small>{% endtrans %}
    </h3>
{% endblock %}

{% block css_page_level_plugin %}
    {{ parent() }}
    <link rel="stylesheet" type="text/css" href="{{ asset('templates/metronic/plugins/select2/select2_metro.css')}} " />
{% endblock %}

{% block js_page_level_plugins %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('templates/metronic/plugins/select2/select2.min.js') }}"></script>
{% endblock %}
{% block body %}
    <div class="row">
        <div class="col-md-12">
            <p>{% trans %}Dogovor list{% endtrans %}</p>
        </div>
    </div>

    {{  include(
        'ListsDogovorBundle:' ~ baseTemplate ~ ':filters.html.twig',
            {
                filterForm: filterForm,
                filterFormName: filterFormName
            }
        )
    }}

    <div class="table-responsive">
        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>

        <table class="table table-striped table-bordered table-advance table-hover">
            <thead>
            <tr>
                <th>{% trans %}ID{% endtrans %} </th>
                <th>{% trans %}Number{% endtrans %} </th>
                <th>{% trans %}Organization name{% endtrans %} </th>
                <th>{% trans %}Customer name{% endtrans %} </th>
                <th>{% trans %}Performer name{% endtrans %} </th>
                <th>{% trans %}Startdatetime{% endtrans %} </th>
                <th>{% trans %}Stopdatetime{% endtrans %} </th>
                <th>{% trans %}Prolongation{% endtrans %} </th>
                <th>{% trans %}Status{% endtrans %} </th>
                <th>{% trans %}Subject{% endtrans %} </th>
                <th>{% trans %}Type{% endtrans %} </th>
            </tr>
            </thead>
            <tbody>
            {% for item in pagination %}
                <tr {% if loop.index is odd %}class="color"{% endif %}>
                    <td>
                        <a href="{{ path('lists_' ~ baseRoutePrefix ~ '_dogovor_show', { id: item.dogovorId }) }}">
                            {{ item.dogovorId|e }}
                        </a>
                    </td>
                    <td>{{ item.dogovorNumber|e }}</td>
                    <td>{{ item.organizationName|e }}</td>
                    <td>{{ item.customerName|e }}</td>
                    <td>{{ item.performerName|e }}</td>
                    <td>{{ item.dogovorStartdatetime|date('d.m.Y') }}</td>
                    <td>{{ item.dogovorStopdatetime|date('d.m.Y') }}</td>
                    <td>
                        {% if item.dogovorProlongation %}
                            {% trans from 'messages'%}Yes{% endtrans %}
                        {% else %}
                            {% trans from 'messages'%}No{% endtrans %}
                        {% endif %}
                    </td>
                    <td>
                        {% if item.dogovorIsActive %}
                            {% trans from 'messages'%}Active{% endtrans %}
                        {% else %}
                            {% trans from 'messages'%}Not Active{% endtrans %}
                        {% endif %}
                    </td>
                    <td>{{ item.dogovorSubject|e }}</td>
                    <td>{{ item.dogovorType|e }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <div class="navigation">
            {{ knp_pagination_render(pagination) }}
        </div>
    </div>
{% endblock body %}

