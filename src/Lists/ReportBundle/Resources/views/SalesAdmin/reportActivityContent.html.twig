{% trans_default_domain 'ListsRepostBundle' %}

{% if results|length %}
    <table class="table table-striped table-bordered table-advance table-hover" id="report-handling-advanced">
        <thead>
        <tr>
            <th>&nbsp;</th>
            <th colspan="{{ levels|length }}">{% trans %}Contact level{% endtrans %}</th>
            {% for type in types %}
                <th>{{ type.reportName }}</th>
            {% endfor %}
            <th>{% trans %}Service list{% endtrans %}</th>
            <th>{% trans %}Our summ{% endtrans %}</th>
            <th>{% trans %}PF1{% endtrans %}</th>
            <th>{% trans %}Launch date{% endtrans %}</th>
            <th>{% trans %}Square{% endtrans %}</th>
            <th>{% trans %}Employees{% endtrans %}</th>
        </tr>
        </thead>
        <tbody>
        {% for result in results %}
            <tr>
                <td colspan="{{ 1 + types|length + levels|length + 6 }}">{{ result.user }}</td>
            </tr>
            {% for organization in result['organizations'] %}
            <tr>
                <td>
                <a
                   href="{{ path('lists_' ~ baseRoutePrefix ~ '_handling_show', { id: organization['handlingId'] }) }}"
                   target="_blank"
                >
                    {{ organization['name'] }}
                </a>
                </td>
                {% for level in levels %}
                    <td>
                        {% if level.digit == organization['levelDigit'] %}
                            {{ organization['levelDigit'] }}
                        {% endif %}
                    </td>
                {% endfor %}
                {% for type in types %}
                    <td>
                        {% if organization['types'][type.id] is defined %}
                            +
                            {#{{ organization['types'][type.id] }}#}
                        {% endif %}
                    </td>
                {% endfor %}
                <td>{{ organization['serviceList'] }}</td>
                <td>{{ organization['budget'] }}</td>
                <td>{{ organization['pf1'] }}</td>
                <td>
                    {% if organization['launchDate'] is defined and organization['launchDate'] %}
                        {{ organization['launchDate']|date('d.m.Y') }}
                    {% endif %}
                </td>
                <td>{{ organization['square'] }}</td>
                <td>{{ organization['employees'] }}</td>
            </tr>
            {% endfor %}
        {% endfor %}
        </tbody>
    </table>
{% endif %}