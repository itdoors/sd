{% trans_default_domain 'ListsArticleBundle' %}
<div class="navigation">
</div>
<div class="table-scrollable" style="clear: right;">
    <table class="table table-striped table-bordered table-hover dataTable" aria-describedby="datatable_ajax_info">
        <thead>
            <tr role="row" class="heading">
                <th width="5%" class="sorting_disabled" role="columnheader" rowspan="1" colspan="1">
                    {% trans %}â„–{% endtrans %}
                </th>
                <th width="5%" class="sorting_disabled" role="columnheader" rowspan="1" colspan="1">
                    {% trans %}ID{% endtrans %}
                </th>
                <th width="50%" class="sorting_disabled" role="columnheader" rowspan="1" colspan="1">
                    {% trans %}Name{% endtrans %}
                </th>
                <th width="15%" class="sorting_disabled" role="columnheader" tabindex="0" rowspan="1" colspan="1">
                    {% trans %}Autor{% endtrans %}
                </th>
                <th width="10%" class="sorting" role="columnheader" tabindex="0" rowspan="1" colspan="1">
                    {% trans %}Date create{% endtrans %}
                </th>
                <th width="15%" class="sorting_disabled" role="columnheader" tabindex="0" rowspan="1" colspan="1">
                    {% trans %}Viewed on{% endtrans %}
                </th>
            {% if is_granted('ROLE_ARTICLEADMIN') %}
                <th width="15%" class="sorting_disabled" role="columnheader" tabindex="0" rowspan="1" colspan="1">
                    {% trans %}Actions{% endtrans %}
                </th>
            {% endif %}
            </tr>
        </thead>
        <tbody role="alert" aria-live="polite" aria-relevant="all">
            {% for key,item in items %}
                <tr class="{{ cycle(['odd', 'even'], item.article.id) }}">
                    <td>{{key+1}}</td>
                    <td>{{item.article.id}}</td>
                    <td><a href="{{ path('list_article_blog_show',{'id':item.article.id}) }}">{{item.article.title}}</a></td>
                    <td>{{item.article.getUser()}}</td>
                    <td>{{ item.article.datePublick == '' ? '' : item.article.datePublick | date('d-m-Y')}}</td>
                    {% if item.viewed is empty %}
                        {% if not is_granted('ROLE_ARTICLEADMIN') %}
                            <td><span style="color:red">{% trans %}new{% endtrans %}</span></td>
                        {% else %}
                            <td></td>
                        {% endif %}
                    {% else %}
                    	<td>{{item.viewed | date('d-m-Y H:i')}}</td>
                    {% endif %}
                    {% if is_granted('ROLE_ARTICLEADMIN') %}
                        {% if item.article.getUser() == app.getUser() %}
                            <td align="center">
                                <a href="{{ path('list_article_blog_edit',{'id':item.article.id}) }}" 
                                   title="{% trans %}Edit{% endtrans %}"><i class="icon-pencil"></i>
                                </a>
                                <a href="{{ path('list_article_blog_delete',{'id':item.article.id}) }}" 
                                   title="{% trans %}Delete{% endtrans %}"><i class="icon-trash"></i>
                                </a>
                            </td>
                        {% endif %}
                    {% endif %}
                </tr>
            {% endfor %}
        </tbody>
    </table>

</div>
