                    <a href="#" id="serviceOffered" data-type="textarea" data-pk="{{ handling.0.id }}" data-value="{{ handling.0.serviceOffered }}" data-original-title="{% trans %}Select type{% endtrans %}">{{ handling.0.serviceoffered }}</a>
