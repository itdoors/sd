                <td>
                    <a href="#" id="handlingServices" data-type="select2" data-pk="{{ handling.0.id }}" data-placement="right" data-value="{{ handling.serviceIds }}" data-placeholder="{% trans %}Enter services{% endtrans %}">{{ handling.serviceList }}</a>
