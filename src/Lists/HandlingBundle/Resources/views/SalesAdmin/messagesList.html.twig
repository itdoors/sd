{% trans_default_domain 'ListsHandlingBundle' %}
    {% for item in messages %}
    <div class="portlet box {% if item.isFutureMessage %}red{% else %}yellow{% endif %}">
        <div class="portlet-title">
            <div class="caption">
                #{{ item.id }} |
                {{ item.createdate|date('d.m.Y, H:i') }} ({{  item.createdatetime|date('d.m.Y, H:i')}}) | {{ item.type }} | {{ item.user }}
                {% if item.isBusinessTrip %}
                    | {% trans %}Business trip{% endtrans %}
                {% endif %}
            </div>
            <div class="tools"><a class="collapse" href="" title="{% trans %}Filters{% endtrans %}"></a></div>
        </div>
        <div class="portlet-body">
            {{ item.description }} <br />
            {% if item.filepath %}
                <a href="/uploads/handling_message/{{ item.handlingId }}/{{ item.filepath }}" target="_blank">
                    {% if item.filename %}
                        {{ item.filename }}
                    {% else %}
                        {% trans %}File{% endtrans %}
                    {% endif %}
                </a>
                <br />
            {% endif %}
        </div>
    </div>
    {% endfor %}
