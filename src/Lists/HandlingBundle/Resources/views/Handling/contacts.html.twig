{% trans_default_domain 'ListsHandlingBundle' %}
{{ call_to_model_contact({
    'selector' : '.call-btn',
    'params' : {
        'modelName' : 'handling',
        'modelId' : handling.0.id,
        'formName' : 'handlingMessageCallForm'
    },
}) }}
        
<div class="tab-pane" id="tab_2">
    <div class="col-md-12">
        <h3>{% trans %}Contacts{% endtrans %}</h3>
        <p>{% trans %}Contacts on handling{% endtrans %}</p>
        {% if accessOrganization.canAddContacts or access.canEdit %}
        <div class="table-toolbar">
            <div class="btn-group" style="margin-bottom: 10px;">
                <button id="managers_list_new" class="btn green ajax-form"
                        data-target_holder="contactsFormTpl"
                        data-form_name="modelContactOrganizationForm"
                        data-default='{"modelName":"organization","modelId":{{ handling.organizationId }} }'
                        data-post_function="updateList"
                        data-post_target_id="contact_list"
                        >
                    {% trans %}Add Contact{% endtrans %} <i class="fa fa-plus"></i>
                </button>
            </div>
            <div style="display: none" id="contactsFormTpl">
            </div>
        </div>
        {% endif %}
        <div id="contact_list" data-url="{{ path('lists_contact_ajax_handling', { handlingId: handling.0.id }) }}" data-params='{"handlingId":{{ handling.0.id }}'>
            {{ render(controller('ListsContactBundle:Contact:Handling', { handlingId: handling.0.id })) }}
        </div>
    </div>
</div>
