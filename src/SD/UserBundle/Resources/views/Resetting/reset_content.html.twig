{% trans_default_domain 'SDUserBundle' %}
<style>
    .progress{
        margin-bottom: 0px !important
    }
</style>
{{ form_errors(form) }}
<form action="{{ path('fos_user_resetting_reset', {'token': token}) }}" {{ form_enctype(form) }} method="POST" class="fos_user_resetting_reset">
    <h3>{% trans %}resetting.new_password{% endtrans %}</h3>
    <div class="form-group">
        {{ form_widget(form.plainPassword.first, {'attr' : {'class' : 'form-control', 'size':20, 'placeholder': 'resetting.new_password'|trans()} } ) }}
    </div>
    <div class="form-group">
        {{ form_widget(form.plainPassword.second, {'attr' : {'class' : 'form-control',"disabled":"disabled", 'size':20, 'placeholder': 'resetting.new_password_confirmation'|trans()} } ) }}
        <span style="color: #d52929; display: none;" id="fos_user_resetting_form_plainPassword_second_error">Пароли не совпадают</span>
    </div>
    
    <div class="form-actions">
        <button type="submit" disabled="disabled" id="fos_user_resetting_form_submit" class="btn green pull-right">{{ 'resetting.reset.submit'|trans }}</button>
    </div>
    {{ form_widget(form._token) }}
</form>
<input type="hidden" id="fos_user_resetting_form_username" value="{{form.vars.value.username}}">