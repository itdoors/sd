<table class="table table-striped table-hover table-bordered" id="tasks_table" cellpadding="0" cellspacing="0">
    <thead>
    <th>id</th>
    <th>Title</th>
    <th>My role</th>
    <th>Description</th>
    <th>End Date</th>
    <th>Stage</th>
    </thead>
    <tbody>
    {% for taskUserRole in tasksUserRole %}
        {% set stage = taskUserRole.task.stage %}
        <tr >

            <td>
                <span class="btn green modal_task" style="min-width: 50px;"
                        data-id="{{ taskUserRole.id }}">{{ taskUserRole.id }}</span>
            </td>
            <td>
                {{ taskUserRole.task.title }}
                {% if not taskUserRole.isViewed %}
                    <span style="color: red;">(не ознакомлен)</span>
                {% endif %}
            </td>
            <td>
                {{ taskUserRole.role }}
            </td>
            <td>
                {{ taskUserRole.task.description }}
            </td>
            <td>
                {{ include ('SDTaskBundle:Task:taskEndDate.html.twig', {
                    'taskEndDates': taskUserRole.task.taskEndDates,
                    'stage': stage
                }) }}
            </td>
            <td>
                {% if stage == 'undone' %}
                    {% set color = 'black' %}
                {% elseif stage == 'performing' %}
                    {% set color = 'gray' %}
                {% elseif stage == 'created' %}
                    {% set color = 'green' %}
                {% elseif stage == 'done' %}
                    {% set color = 'orange' %}
                {% elseif stage == 'date request' %}
                    {% set color = 'red' %}
                {% elseif stage == 'closed' %}
                    {% set color = 'blue' %}
                {% elseif stage == 'checking' %}
                    {% set color = '#87cefa' %}
                {% endif %}
                <span style="background-color: {{ color }}; color: white; padding: 5px;">{{ stage }}</span>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>