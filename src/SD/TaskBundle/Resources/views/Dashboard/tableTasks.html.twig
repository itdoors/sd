{% trans_default_domain 'SDTaskBundle' %}
<script>
    $(document).ready(function(){
        $('.modal_task').die('click')
        $('.modal_task').live('click', function(e){
            var id = $(this).data('id');
            var url = $('#more_info_input').data('url_task_modal');
            var sendData = {
                    'id': id
                }
            $.ajax({
                type: 'POST',
                url: url,
                data: sendData,
                success: function(data1) {
                    //alert(data1)
                    data = JSON.parse(data1);
                    if (data.success == 1) {
                        $('#taskViewTpl').html('').html(data.html);
                        $('#form_modal_task_view').modal('show');
                    } else {
                        //$('#copy_etalon_finished').show('blind', {}, 500);
                    }


                }

            })
        })

        $('.filterButton').die('click')
        $('.filterButton').live('click', function(e){
            e.preventDefault();
            var filter = $(this).data('show');
            var url = $('#more_info_input').data('url_task_table');
            var sendData = {
                    'filter': filter
                }
            ITDoorsAjax.blockUI($('#tasks_list'));
            $.ajax({
                type: 'POST',
                url: url,
                data: sendData,
                success: function(data1) {
                    data = JSON.parse(data1);
                    if (data.success == 1) {
                        ITDoorsAjax.unblockUI($('#tasks_list'));
                        $('#tasks_list').html('').html(data.html);
                        //$('#form_modal_task_view').modal('show');
                    } else {
                        //$('#copy_etalon_finished').show('blind', {}, 500);
                    }

                }

            })
        })

    })
</script>
<div class="table-scrollable" style="max-height: 438px; overflow: auto;">
<table class="table table-striped table-hover table-bordered" id="tasks_table" cellpadding="0" cellspacing="0">
    <thead>
    <th>id</th>
    <th>{% trans %}Title{% endtrans %}</th>
    <th>{% trans %}My role{% endtrans %}</th>
    <th>{% trans %}Description{% endtrans %}</th>
    <th>{% trans %}End date{% endtrans %}</th>
    <th>{% trans %}Stage{% endtrans %}</th>
    </thead>
    <tbody>
    {% for taskUserRole in tasksUserRole %}
        {% set stage = taskUserRole.task.stage %}
        <tr>
            <td style="text-align: center; vertical-align: middle;">
                <span class="btn green modal_task" style="min-width: 50px;"
                        data-id="{{ taskUserRole.id }}">{{ taskUserRole.role|slice(0, 1) }}-{{ taskUserRole.task.id }}</span>
            </td>
            <td style="text-align: left; vertical-align: middle;">
                {{ taskUserRole.task.title }}
                {% if not taskUserRole.isViewed %}
                    <span style="color: red;">(не ознакомлен)</span>
                {% endif %}
            </td>
            <td style="text-align: center; vertical-align: middle;">
                {{ taskUserRole.role|trans }}
            </td>
            <td style="text-align: left; vertical-align: middle;">
                {{ taskUserRole.task.description }}
            </td>
            <td style="text-align: right; vertical-align: middle;">
                {{ include ('SDTaskBundle:Task:taskEndDate.html.twig', {
                    'taskEndDates': taskUserRole.task.taskEndDates,
                    'stage': stage
                }) }}
            </td>
            <td style="text-align: center; vertical-align: middle;">
                {% if stage == 'undone' %}
                    {% set color = 'black' %}
                {% elseif stage == 'performing' %}
                    {% set color = 'gray' %}
                {% elseif stage == 'created' %}
                    {% set color = 'green' %}
                {% elseif stage == 'done' %}
                    {% set color = 'orange' %}
                {% elseif stage == 'date request' %}
                    {% set color = 'red' %}
                {% elseif stage == 'closed' %}
                    {% set color = 'blue' %}
                {% elseif stage == 'checking' %}
                    {% set color = '#87cefa' %}
                {% endif %}
                <span style="background-color: {{ color }}; color: white; padding: 5px;">{{ stage|trans }}</span>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
</div>

<div class="portlet light bordered">
<div class="portlet-title">
    <div class="caption">
        <i class="icon-globe font-green-haze"></i>
        <span class="caption-subject font-green-haze ">Tasks</span>
        <span class="caption-helper">tasks summary...</span>
    </div>
    <div class="actions">
        <div class="btn-group">
            <a class="btn btn-sm btn-default btn-circle" href="#" data-toggle="dropdown" data-hover="dropdown" data-close-others="true">
                Filter By <i class="fa fa-angle-down"></i>
            </a>
            <div class="dropdown-menu hold-on-click dropdown-checkboxes pull-right">
                <label><input type="checkbox"/> Finance</label>
                <label><input type="checkbox"/> Membership</label>
                <label><input type="checkbox"/> Customer Support</label>
                <label><input type="checkbox"/> HR</label>
                <label><input type="checkbox"/> System</label>
                <li class="divider">
                </li>
                <li>
                    <a href="#" class="btn red">
                        <span style="color: white;">Filter</span></a>
                </li>
            </div>
        </div>
    </div>
</div>
<div class="portlet-body">
<div class="scroller" style="height: 300px;" data-always-visible="1" data-rail-visible="0">
<ul class="feeds">
{% for taskUserRole in tasksUserRole %}
    {% set stage = taskUserRole.task.stage %}
    {% if stage == 'undone' %}
        {% set color = 'black' %}
    {% elseif stage == 'performing' %}
        {% set color = 'gray' %}
    {% elseif stage == 'created' %}
        {% set color = 'green' %}
    {% elseif stage == 'done' %}
        {% set color = 'orange' %}
    {% elseif stage == 'date request' %}
        {% set color = 'red' %}
    {% elseif stage == 'closed' %}
        {% set color = 'blue' %}
    {% elseif stage == 'checking' %}
        {% set color = '#87cefa' %}
    {% endif %}

    {% if taskUserRole.role == 'author' %}
        {% set icon = 'fa-pencil' %}
        {% set label = 'label-danger' %}
    {% elseif taskUserRole.role == 'performer' %}
        {% set icon = 'fa-rocket' %}
        {% set label = 'label-info' %}
    {% elseif taskUserRole.role == 'controller' %}
        {% set icon = 'fa-crosshairs' %}
        {% set label = 'label-warning' %}
        {#
            {% elseif taskUserRole == 'done' %}
                {% set icon = 'orange' %}
                fa-eye
        #}
    {% endif %}

    <li data-id="{{ taskUserRole.id }}" class="modal_task">
        <div class="col1">
            <div class="cont">
                <div class="cont-col1">
                    <div class="label label-sm {{ label }}">
                        <i class="fa {{ icon }}"></i>
                        {#{{ taskUserRole.role|slice(0, 1) }}-{{ taskUserRole.task.id }}#}
                    </div>
                </div>
                <div class="cont-col2">
                    <div class="desc">
                        {% if not taskUserRole.isViewed %}
                            <span style="color: green;">{{ taskUserRole.task.title }}</span>
                        {% else %}
                            {{ taskUserRole.task.title }}
                        {% endif %}

                        <span class="label label-sm label-warning ">
														Take action <i class="fa fa-share"></i>
														</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="col2">
            <div class="date">
                {{ include ('SDTaskBundle:Task:taskEndDate.html.twig', {
                'taskEndDates': taskUserRole.task.taskEndDates,
                'stage': stage,
                'type': 'last'
                }) }}
            </div>
        </div>
    </li>
{% endfor %}

</ul>
</div>
<div class="scroller-footer">
    <div class="btn-arrow-link pull-right">
        <a href="#">See All Records</a>
        <i class="icon-arrow-right"></i>
    </div>
</div>
</div>
</div>