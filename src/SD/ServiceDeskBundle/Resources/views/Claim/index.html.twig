{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Claim list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Types</th>
                <th>Status</th>
                <th>Importance</th>
                <th>Createdat</th>
                <th>Closedat</th>
                <th>Disabled</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('claim_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.types }}</td>
                <td>{{ entity.status }}</td>
                <td>{{ entity.importance }}</td>
                <td>{% if entity.createdAt %}{{ entity.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{% if entity.closedAt %}{{ entity.closedAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.disabled }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('claim_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('claim_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('claim_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
