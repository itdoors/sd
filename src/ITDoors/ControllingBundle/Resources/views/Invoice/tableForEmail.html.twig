{% trans_default_domain 'ITDoorsControllingBundle' %}
<table style="width:100%;text-align:center;border-collapse: collapse;border: 1px double #eee">
    <tbody>
        <tr>
            <td style="border: 1px double #eee">{% trans %}â„– invoice{% endtrans %}</td>
            <td style="border: 1px double #eee">{% trans %}Date invoice{% endtrans %}</td>
            <td style="border: 1px double #eee">{% trans %}Invoice amount{% endtrans %}</td>
        </tr>
        {% for invoice in invoices %}
        <tr>
            <td style="border: 1px double #eee">{{ invoice.invoiceId }}</td>
            <td style="border: 1px double #eee">{{invoice.date |date('d.m.Y') }}</td>
            <td style="border: 1px double #eee">{{ template == 'invoice-not-pay' ? (invoice.sum - invoice.paymentsSumma)| number_format(2, ',', ' ') : invoice.paymentsSumma| number_format(2, ',', ' ')}}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>