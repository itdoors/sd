{% extends "::base.html.twig" %}
{% trans_default_domain 'ITDoorsControllingBundle' %}
{% block title %}{% trans %}List of debtors{% endtrans %} {% endblock %}
{% block page_title %}
<h3 class="page-title">
        {% trans %}Invoice <small>list of debtors</small>{% endtrans %}
</h3>
{% endblock %}
{% block page_breadcrumbs %}
<ul class="page-breadcrumb breadcrumb">
    <li>
        <i class="fa fa-home"></i>
        <a href="{{ path('it_doors_controlling_invoice') }}" title="{% trans %}Controlling{% endtrans %}">{% trans %}Controlling{% endtrans %}</a>
        <i class="fa fa-angle-right"></i>
    </li>
    <li><a href="{{ path('it_doors_controlling_invoice') }}" title="{% trans %}debtors{% endtrans %}">{% trans %}debtors{% endtrans %}</a></li>
</ul>
{% endblock %}

{% block css_page_level_plugin %}
    {{ parent() }}

{% endblock %}

{% block js_page_level_plugins %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('bundles/itdoorscontrolling/js/invoice.js') }}"></script>
{% endblock %}

{% block body %}
<div class="row">
    <div class="col-md-12">
        <div class="tabbable tabbable-custom boxless">
            <ul class="nav nav-tabs">
                <li{% if period == 30 %} class="active"<{% endif %}><a href="#tab_0" data-toggle="tab" data-block-id="block-ajax" data-url="{{ url('it_doors_controlling_invoice_show', { period: 30 }) }}">{% trans %}from{% endtrans %} 1 {% trans %}to{% endtrans %} 30 {% trans %}day{% endtrans %}</a></li>
                <li{% if period == 60 %} class="active"<{% endif %}><a href="#tab_1" data-toggle="tab" data-block-id="block-ajax" data-url="{{ url('it_doors_controlling_invoice_show', { period: 60 }) }}">{% trans %}from{% endtrans %} 31 {% trans %}to{% endtrans %} 60 {% trans %}days{% endtrans %}</a></li>
                <li{% if period == 120 %} class="active"<{% endif %}><a href="#tab_2" data-toggle="tab" data-block-id="block-ajax" data-url="{{ url('it_doors_controlling_invoice_show', { period: 120 }) }}">{% trans %}from{% endtrans %} 61 {% trans %}to{% endtrans %} 120 {% trans %}days{% endtrans %}</a></li>										
                <li{% if period == 180 %} class="active"<{% endif %}><a href="#tab_3" data-toggle="tab" data-block-id="block-ajax" data-url="{{ url('it_doors_controlling_invoice_show', { period: 180 }) }}">{% trans %}from{% endtrans %} 121 {% trans %}to{% endtrans %} 180 {% trans %}days{% endtrans %}</a></li>
                <li{% if period == 181 %} class="active"<{% endif %}><a href="#tab_4" data-toggle="tab" data-block-id="block-ajax" data-url="{{ url('it_doors_controlling_invoice_show', { period: 181 }) }}">{% trans %}from{% endtrans %} 181 {% trans %}day{% endtrans %}</a></li>
                <li{% if period == 'court' %} class="active"<{% endif %}><a href="#tab_5" data-toggle="tab" data-block-id="block-ajax" data-url="{{ url('it_doors_controlling_invoice_show', { period: 'court' }) }}">{% trans %}court{% endtrans %}</a></li>
                <li{% if period == 'pay' %} class="active"<{% endif %}><a href="#tab_5" data-toggle="tab" data-block-id="block-ajax" data-url="{{ url('it_doors_controlling_invoice_show', { period: 'pay' }) }}">{% trans %}pay{% endtrans %}</a></li>
            </ul>
            <div class="tab-content" id="block-ajax">
                 {{ render(controller('ITDoorsControllingBundle:Invoice:show', {   'period': period })) }}
            </div>
        </div>
    </div>
</div>
{% endblock body %}