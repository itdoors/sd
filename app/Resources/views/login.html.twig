	{% block js_page_init_scripts %}
    <script>
        jQuery.extend(jQuery.validator.messages, {
            required: "{% trans %}This field is required.{% endtrans %}",
            remote: "Please fix this field.",
            email: "{% trans %}Please enter a valid email address.{% endtrans %}",
            url: "Please enter a valid URL.",
            date: "Please enter a valid date.",
            dateISO: "Please enter a valid date (ISO).",
            number: "Please enter a valid number.",
            digits: "Please enter only digits.",
            creditcard: "Please enter a valid credit card number.",
            equalTo: "Please enter the same value again.",
            accept: "Please enter a value with a valid extension.",
            maxlength: jQuery.validator.format("Please enter no more than {0} characters."),
            minlength: jQuery.validator.format("Please enter at least {0} characters."),
            rangelength: jQuery.validator.format("Please enter a value between {0} and {1} characters long."),
            range: jQuery.validator.format("Please enter a value between {0} and {1}."),
            max: jQuery.validator.format("Please enter a value less than or equal to {0}."),
            min: jQuery.validator.format("Please enter a value greater than or equal to {0}.")
        });
        jQuery(document).ready(function() {
            App.init();
            Login.init();
            var options = {
                common:{
                   onKeyUp: function(){
                       if ($('.error-list li').length === 0 && !$('.progress .progress-bar').hasClass('progress-bar-danger')){
                           $('#fos_user_resetting_form_plainPassword_second').attr('disabled', false);
                           if ($('#fos_user_resetting_form_plainPassword_second').val() === $('#fos_user_resetting_form_plainPassword_first').val()){
                               $('#fos_user_resetting_form_submit').attr('disabled', false);
                           } else {
                               $('#fos_user_resetting_form_submit').attr('disabled', 'disabled');
                           }
                       } else {
                          $('#fos_user_resetting_form_submit').attr('disabled', 'disabled');
                          $('#fos_user_resetting_form_plainPassword_second').attr('disabled', 'disabled');
                       }
                       
                   }
                },
                ui: {
                    verdicts: ["Простой", "Слабый", "Нормльный", "Средний", "Сложный"],
                    showVerdictsInsideProgressBar: true,
                    showErrors: true,
                    
                    errorMessages: {
                        password_too_short: "Пароль слишком короткий",
                        email_as_password: "Запрещено использовать email в качестве пароля",
                        same_as_username: "Пароль не должен содержать логин",
                        two_character_classes: "Пароль должен содержать латинские буквы, цифры и символы из списка: ! @ # $ % ^ & * ( ) _ - +",
                        repeated_character: "Слишком много повторений",
                        sequence_found: "Ваш пароль содержит последовательность"
                    },
                    usernameField: '#fos_user_resetting_form_username',
                    showStatus: true,
                    spanError: function (options, key) {
                        $('#fos_user_resetting_form_submit').attr('disabled', 'disabled');
                        var text = options.ui.errorMessages[key];
                        return '<span style="color: #d52929; font-size: 11px">' + text + '</span>';
                    }
                },
                rules:{
                    activated:{
                        //wordTwoCharacterClasses: true
                        wordRepetitions: true
                    }
                }
            };
            $('#fos_user_resetting_form_plainPassword_first').pwstrength(options);
            $('#fos_user_resetting_form_plainPassword_second').keyup(function(){
                if ($('#fos_user_resetting_form_plainPassword_second').val() === $('#fos_user_resetting_form_plainPassword_first').val() && $('#fos_user_resetting_form_plainPassword_second').val() !== ''){
                    $('#fos_user_resetting_form_submit').attr('disabled', false);
                } else {
                    $('#fos_user_resetting_form_submit').attr('disabled', 'disabled');
                }
            });
        });
    </script>
